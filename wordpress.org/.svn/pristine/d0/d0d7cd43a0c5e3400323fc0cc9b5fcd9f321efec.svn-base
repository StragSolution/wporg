/* Reader */
#features-animation-reader {

}

/* Push Notifications */
.child-pages .hentry:nth-child(4) .feature-text {
	float: right;
}

#features-animation-notification {
	background-color: $color-wp-blue;
	border-radius: 6px;
	color: #fff;
	padding: .75em 0 .75em .75em;
	width: 14em;
	
	@media screen and (max-width: 955px) {
		padding: .5em;
		width: 11em;
	}
}

#features-animation-notification h3,
#features-animation-notification p {
	margin-bottom: 0;
	padding-left: .5em;
}


#features-animation-notification h3 {
	font-size: .778em;
	
	@media screen and (max-width: 955px) {
		font-size: .618em;
	}
}

#features-animation-notification p {
	font-size: .618em;
}

#features-animation-notification .wpcom-logo {
	height: 2.7em;
	width: 20%;
	padding: 0;
	background-position: center;
	
	@media screen and (max-width: 955px) {
		height: 3.5em;
		background-size: 80%;
	}	
} 

.features-animation-notification-text {
	display: inline-block;
	width: 80%;
}

/* Jetpack Integration */
#features-animation-jetpack {
	text-align: center;
}

.jetpack-logo {
	background: url(data:image/svg+xml;base64,) center center no-repeat;
	background-size: 98%;
	background-position: center;
	display: inline-block;
	text-rendering: optimizeLegibility;
	height: 8em;
	width: 8em;
	
	@media screen and (max-width: 955px) {
			height: 6em;
			width: 6em;
	}	
}

/* = Hide Jetpack stuff == */
.home #jp-post-flair {
	display: none;
}